<section class="todoapp">
  <header class="header">
    <h1>Login!</h1>
    <%= form_tag(sessions_path)  do  %>
      <%= text_field_tag :email, '', class: "new-todo", placeholder: "enter your email to log in..." %>
      <%= password_field_tag :password, '', class: "new-todo", placeholder: "and password..." %>
      <%= submit_tag %>
    <% end %>
    <p><%= link_to "Login via GitHub", '/auth/github' %></p>
  </header>
  <footer class="footer">
  </footer>
</section>
